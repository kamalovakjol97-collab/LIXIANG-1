// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  role          String    // "client" or "manager"
  name          String
  email         String    @unique
  phone         String?
  passwordHash  String    @map("password_hash")
  createdAt     DateTime  @default(now()) @map("created_at")
  
  orders        Order[]
  
  @@map("users")
}

model Order {
  id              String    @id @default(cuid())
  clientId        String    @map("client_id")
  fromLocation    String    @map("from_location")
  toLocation      String    @map("to_location")
  cargoDescription String  @map("cargo_description")
  weight          String?
  volume          String?
  status          String    @default("Заявка создана")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  client          User      @relation(fields: [clientId], references: [id])
  statusHistory   OrderStatusHistory[]
  messages        Message[]
  documents       Document[]
  
  @@map("orders")
}

model OrderStatusHistory {
  id        String   @id @default(cuid())
  orderId   String   @map("order_id")
  status    String
  comment   String?  // Комментарий менеджера к изменению статуса
  changedAt DateTime @default(now()) @map("changed_at")
  
  order     Order    @relation(fields: [orderId], references: [id])
  
  @@map("order_status_history")
}

model Message {
  id          String   @id @default(cuid())
  orderId     String   @map("order_id")
  senderRole  String   @map("sender_role") // "client" or "manager"
  senderName  String?  @map("sender_name")
  messageText String   @map("message_text")
  createdAt   DateTime @default(now()) @map("created_at")
  
  order       Order    @relation(fields: [orderId], references: [id])
  
  @@map("messages")
}

model Document {
  id          String   @id @default(cuid())
  orderId     String   @map("order_id")
  fileName    String   @map("file_name")
  filePath    String   @map("file_path")
  fileSize    Int?     @map("file_size")
  uploadedAt  DateTime @default(now()) @map("uploaded_at")
  
  order       Order    @relation(fields: [orderId], references: [id])
  
  @@map("documents")
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?  // Краткое описание
  content     String   // Полный текст статьи
  category    String?  // Категория новости
  imageUrl    String?  @map("image_url")
  views       Int      @default(0)
  published   Boolean  @default(false)
  publishedAt DateTime? @map("published_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("articles")
}
